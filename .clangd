CompileFlags:
  Add:
    - "-I/usr/include"

    # dbus
    - -I/usr/include/dbus-1.0
    - -I/usr/lib64/dbus-1.0/include
    - -ldbus-1

    # gio
    - -I/usr/include/glib-2.0
    - -I/usr/lib64/glib-2.0/include
    - -DWITH_GZFILEOP
    - -I/usr/include/libmount
    - -I/usr/include/blkid
    - -I/usr/include/sysprof-6
    - -pthread
    - -lgio-2.0
    - -lgobject-2.0
    - -lglib-2.0

    # pipewire
    - -I/usr/include/pipewire-0.3
    - -I/usr/include/spa-0.2
    - -D_REENTRANT
    - -lpipewire-0.3
